{
  "name": "contexture",
  "scripts": {
    "css-compile-dev": "node-sass --include-path node_modules --precision 6 scss -o css/",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o css/",
    "css-prefix": "postcss --replace css/contexture.css --use autoprefixer --map",
    "css": "npm-run-all css-compile css-prefix",
    "watch": "nodemon -e scss -x \"npm run css-compile-dev\""
  },
  "dependencies": {
    "bootstrap": "~5.0.0-beta3"
  },
  "devDependencies": {
    "autoprefixer": "~10.2.5",
    "node-sass": "~5.0.0",
    "nodemon": "~2.0.7",
    "npm-run-all": "~4.1.5",
    "postcss": "~8.2.8",
    "postcss-cli": "~8.3.1"
  }
}
